@{
}

@model Product

<div class="card m-1 p-1">
    <h4>
        @Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Name served</small></span>
    </h4>

    <ul>
        <li>Product ID: @Model.ProductId</li>
        <li>Product Year: @Model.Year</li>
        <li>Product Name: @Model.Name</li>
        <li>Primary Color: @Model.PrimaryColor</li>
    </ul>
    <form id=@Model.ProductId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Donate</button>
    </form>
</div>